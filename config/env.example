# Supabase Configuration
# Reemplaza estos valores con los de tu proyecto Supabase
SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Data Source Configuration
# true = usar datos reales de Supabase, false = usar mocks (solo desarrollo)
USE_SUPABASE=true

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Analytics (opcional)
NEXT_PUBLIC_GA_ID=

# WhatsApp Configuration
# Copia este archivo a .env.local y ajusta los valores

# Número de teléfono en formato E164 (requerido)
WA_PHONE_E164=+56993481594

# URL completa de WhatsApp (opcional, si no se usa se construye desde phone + message)
# NEXT_PUBLIC_WA_URL=https://wa.me/56993481594?text=Hola

# Mensaje personalizado para flash videos (opcional)
NEXT_PUBLIC_WA_FLASH_MSG="Quiero reservar el Pack Dúo de videos para mi arriendo. ¿Cupos disponibles?"

# Google Analytics 4 (opcional, para telemetría)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Feature Flags (Frontend Architecture V2)
NEXT_PUBLIC_FLAG_CARD_V2=0
NEXT_PUBLIC_FLAG_VIRTUAL_GRID=0
NEXT_PUBLIC_COMMUNE_SECTION=0
NEXT_PUBLIC_FOOTER_ENABLED=1
